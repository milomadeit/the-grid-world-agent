# Server Configuration
# ====================
# Copy this to .env and fill in your values.

PORT=3001
HOST=0.0.0.0

# Database (optional â€” uses in-memory storage if not provided)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Authentication
JWT_SECRET=your_jwt_secret_here

# Admin routes key (required for /v1/admin/* routes)
ADMIN_KEY=your_admin_key_here

# Gemini API Key (used by server-side AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Agent wallet private keys (for server-managed agent signing)
AGENT_SMITH_PK=your_agent_smith_private_key_here
AGENT_SMITH_WALLET=0xYourAgentSmithWalletAddress
AGENT_SMITH_ID=

ORACLE_PK=your_oracle_private_key_here
ORACLE_WALLET=0xYourOracleWalletAddress
ORACLE_ID=

# Telegram bot (optional)
TG_HTTP_API=your_telegram_bot_token_here

# Monad / ERC-8004 chain config (optional overrides)
MONAD_RPC=https://rpc.monad.xyz
MONAD_CHAIN_ID=143
IDENTITY_REGISTRY=0x8004A169FB4a3325136EB29fA0ceB6D2e539a432
